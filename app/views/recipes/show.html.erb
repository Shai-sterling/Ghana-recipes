


<br>
<br>
<div class="reciep-show-wrapper">

    <div class="show-image">
        <%= image_tag(@recipe.image) %>

    </div>

    <div class="recipe-show-details">

        <div>
            <h1><%= @recipe.title %></h1>
        </div>
<br>
        <div>
           <strong>Author:</strong> <%= @recipe.name %>
        </div>
<br>
        <div>
            <p><%= @recipe.description %></p> 
        </div>

        <div>
            <p><%= @recipe.created_at %></p>

        </div>

        <div>
            <ul>
                <%  @recipe.ingredients.each do |ingredient| %>

                <li> <%= ingredient.name %></li>

                    <li><%= ingredient.quantity %></li>

                    <li><%= ingredient.unit %></li>

                    <%= link_to "Edit ingredient", edit_recipe_ingredient_path(@recipe, ingredient) %>
                    <%= link_to "Delete ingredient", recipe_ingredient_path(@recipe, ingredient), method: :delete, data: { confirm: "Are you sure?" } %>

                <% end %>
            </ul>

        </div>

        <div>
            <p><%= link_to "Add ingredient", new_recipe_ingredient_path(@recipe) %></p>

        </div>

        <div>
            <p><%= link_to "Add Review", new_recipe_review_path(@recipe) %></p>

        </div>

        <div class="recipe-show-buttons">
            <%= link_to "Edit Recipe", edit_recipe_path(@recipe), class: "edit-recipe-btn"%>
            <%= link_to "Delete Recipe", recipe_path(@recipe), method: :delete, data: { confirm: " Are you sure?"},  class: "delete-recipe-btn"  %>

        </div>

    </div>


 </div>
    <div class="review-wrapper">

        <% @recipe.reviews.each do |review| %>

            <div>
                <%=  review.rating %>
            </div>

            <div>
                <%=  review.body %>
            </div>

            <div>
                <%= link_to "Edit review", edit_recipe_review_path(@recipe, review) %>
            </div>

        <% end %>
    </div>
